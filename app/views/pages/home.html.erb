<link href='http://fonts.googleapis.com/css?family=Raleway:100|Abel' rel='stylesheet' type='text/css'>

<h1 class="header"> Spotifyness </h2>

  <div class="input-group col-md-6 col-md-offset-3">
    <p class="maintext"> Find album art </p>
    <%= form_tag page_path('home'), :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search], class:"form maintext", placeholder:"Search"  %>
      <%= submit_tag "Search", :name => nil, class: "btn btn-primary" %>
    </p>
    <% end %>
  </div>
  <div class="col-md-12 well well-lg">
    <% if not params[:search].nil? %>
      <% get_albums(params[:search]).each do |album| %>
        <a href=<%= album.external_urls["spotify"] %>>
          <image class="morph" src=<%= album.images.first["url"] %>></image>
        </a>
      <% end %>
    <% end %>
  </div>
